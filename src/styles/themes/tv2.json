{
    "id": "tv2",
    "name": "TV 2",
    "fonts": {
        "custom": {
            "families": ["TV 2 Condensed SN", "TV 2 Display"],
            "urls": ["https://fragments.alpha.tv2.no/common.css"]
        }
    },
    "properties": {
        "fontFamily": {
            "primary": "'TV 2 Condensed SN', sans-serif",
            "titles": "'TV 2 Display', sans-serif"
        },
        "fontSize": {
            "root": "14px",
            "tiny": "0.785714rem",
            "small": "0.857rem",
            "regular": "1rem",
            "medium": "1.142rem",
            "large": "1.285rem",
            "heading4": "1.428rem",
            "heading3": "1.8rem",
            "heading2": "2.285rem",
            "heading1": "2.857rem"
        },
        "fontWeight": {
            "light": "100",
            "regular": "200",
            "medium": "400",
            "bold": "600"
        },
        "lineHeight": {
            "small": "1.2",
            "regular": "1.5"
        },
        "color": {
            "base": "#100118",
            "contrast": "#ffffff",
            "background": "#ffffff",
            "backgroundContent": "#ffffff",
            "primary": "#6F03FF",
            "primaryContrast": "#ffffff",
            "accent": "#FFDDCA",
            "accentContrast": "#100118",
            "success": "#34d896",
            "error": "#ff668d",
            "warning": "#e4bb40",
            "info": "#4AA1DB",
            "attention": "#f6fd9a",
            "statusText": "#ffffff",
            "link": "#2A82DC"
        },
        "spacing": {
            "small": "0.357rem",
            "regular": "0.714rem",
            "medium": "1.42rem",
            "large": "2.14rem",
            "edges": "1.28rem"
        },
        "elementSize": {
            "small": "2.57rem",
            "regular": "3.42rem",
            "big": "4.14rem"
        },
        "borderRadius": {
            "form": "5px",
            "buttons": "5px",
            "content": "5px"
        },
        "boxShadow": {
            "regular": "none",
            "medium": "0 1px 15px 1px rgba(var(--color_base), 0.2)",
            "large": "0 1px 25px 1px rgba(var(--color_base), 0.2)"
        },
        "input": {
            "border": "1px solid rgba(var(--color_base), 0.2)",
            "borderFocus": "1px solid rgb(var(--color_primary))",
            "borderError": "1px solid rgb(var(--color_error))",
            "boxShadowFocus": "0 0 5px 0 rgba(var(--color_primary), 0.3)",
            "boxShadowError": "0 0 5px 0 rgba(var(--color_error), 0.3)"
        },
        "navMain": {
            "backgroundColor": "var(--color_background)",
            "foregroundColor": "var(--color_base)",
            "accentColor": "var(--color_primary)",
            "borderRight": "1px solid rgba(var(--color_base), 0.1)"
        },
        "navBar": {
            "backgroundColor": "var(--color_primary)",
            "foregroundColor": "var(--color_primaryContrast)",
            "accentColor": "var(--color_primaryContrast)",
            "subBackgroundColor": "var(--color_background)",
            "subBorderBottom": "1px solid rgba(var(--color_base), 0.1)"
        },
        "navLogo": {
            "backgroundColor": "var(--color_background)",
            "fill": "var(--color_primary)"
        },
        "splash": {
            "backgroundColor": "var(--color_primary)",
            "foregroundColor": "var(--color_primaryContrast)"
        },
        "pageNav": {
            "borderBottom": "1px solid rgba(var(--color_base), 0.1)",
            "buttonSpacing": "0",
            "borderTopCompact": "1px solid rgba(var(--color_base), 0.1)"
        },
        "pageCrumbs": {
            "boxShadow": "none",
            "backgroundColor": "transparent",
            "arrowColor": "rgba(var(--color_primary), 1)"
        },
        "navMenuHeading": {
            "color": "rgba(var(--navMain_foregroundColor), 0.2)"
        },
        "navMenuItem": {
            "backgroundActive": "rgba(var(--color_base), 0.03)"
        },
        "cardTitle": {
            "borderBottom": "1px solid rgba(var(--color_base), 0.1)",
            "actionBorder": "none"
        },
        "cardContent": {
            "border": "none"
        }
    }
}
